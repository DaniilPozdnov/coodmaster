@page
@model RegisterModel
@{
    ViewData["Title"] = "Регистрация";
}
<html>
<body>
<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
                <button id="registerSubmit" type="submit" class="login-submit" class="w-100 btn btn-lg btn-primary">Регистрация</button>
        </form>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <div class="picture">
            <img src="https://cdn.spbguru.ru/uploads/flats/2810/kvartry-v-842-zhk-kingdom-1608897406_2617.jpg" height="500px" width="1000px"
        </div>
    </div>
</div>
</body>
</html>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<style type="text/css">
    html {
        background-color: #E2F9EA;
    }

    .login-submit {
        width: 250px;
        height: 55px;
        background-color: #69a07c;
        margin-top: 25px;
        text-align: center;
        border: 2px solid black;
        border-radius: 15px;
        color: #ffeded;
    }

    body {
        background-color: #E2F9EA;
    }
</style>
